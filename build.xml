<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="jar" name="Masumi">
    <property name="version.num" value="0.0.1"/>
    <buildnumber file="build.num"/>
    <property name="src" location="src"/>
    <property name="build" location="bin"/>
    <property name="doc" location="doc"/>
    <property name="jar" location="pkg/masumi.jar"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <path id="Masumi.classpath">
        <pathelement location="bin"/>
    </path>
    <target name="init">
        <!-- Create the time stamp -->
        <tstamp/>
        <mkdir dir="${build}"/>
        <copy includeemptydirs="false" todir="${build}">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
        <mkdir dir="pkg"/>
    </target>
    <target name="clean">
        <delete dir="bin"/>
    </target>
    <target depends="clean" name="cleanall">
        <delete dir="pkg"/>
        <delete dir="debian/masumi"/>
    </target>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac includeantruntime="false" debug="true" debuglevel="${debuglevel}" destdir="${build}" source="${source}" target="${target}">
            <src path="${src}"/>
            <classpath refid="Masumi.classpath"/>
        </javac>
    </target>
    <target depends="build-project" name="jar">
        <jar destfile="${jar}" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Implementation-Version" 
                        value="${version.num}-${build.number}"/>
                <attribute name="Main-Class" value="masumi.Masumi"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="bin"/>
        </jar>
    </target>
    <!-- Launch4j is used for creating a Windows executable -->
    <property name="launch4j.dir" location="tools/launch4j" />
    <taskdef name="launch4j"
            classname="net.sf.launch4j.ant.Launch4jTask"
                classpath="${launch4j.dir}/launch4j.jar
                        :${launch4j.dir}/lib/xstream.jar" />
    <target name="windows-exe" depends="jar">
        <launch4j configFile="masumi_launch4j.xml" />
    </target>
    <taskdef name="nsis" classname="com.danielreese.nsisant.Task"
        classpath="tools/nsisant-1.3.jar" />
    <target depends="windows-exe" name="windows-package">
        <nsis script="masumi.nsi"/>
    </target>
    <target depends="windows-package" name="package" />
</project>
